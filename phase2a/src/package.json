{
  "name": "hedgehog-platform",
  "version": "0.1.0",
  "description": "Next-generation cloud native infrastructure management platform",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev:web\" \"npm run dev:swarm\"",
    "dev:api": "cd backend && npm run dev",
    "dev:web": "cd frontend && npm run dev",
    "dev:swarm": "npx ruv-swarm mcp start --port 8200",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "quality:gates": "npm run lint && npm run typecheck && npm run test",
    "docker:build": "docker-compose -f ../deployment/docker-compose.new-platform.yml build",
    "docker:up": "docker-compose -f ../deployment/docker-compose.new-platform.yml up -d",
    "docker:down": "docker-compose -f ../deployment/docker-compose.new-platform.yml down",
    "ports:check": "../scripts/check-ports.sh",
    "parallel:start": "../scripts/parallel-startup.sh"
  },
  "dependencies": {
    "ruv-swarm": "^1.0.0",
    "concurrently": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/afewell-hh/hedgehog-platform.git"
  },
  "keywords": [
    "infrastructure",
    "cloud-native",
    "kubernetes",
    "gitops",
    "netbox",
    "migration"
  ],
  "author": "Hedgehog Platform Team",
  "license": "MIT"
}