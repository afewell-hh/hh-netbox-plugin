# NetBox Hedgehog Development Environment Configuration
# =======================================================
# Copy this template to .env and configure for your environment

# ====================
# NetBox Configuration
# ====================
NETBOX_URL=http://localhost:8000
NETBOX_TOKEN=your_netbox_api_token_here
NETBOX_USERNAME=admin
NETBOX_PASSWORD=admin

# Development Settings
DEV_MODE=true
DEBUG=true

# ====================
# Test Kubernetes Cluster
# ====================
# Real test K8s cluster with ONF fabric installation
K8S_TEST_CLUSTER_NAME=test-onf-cluster
K8S_TEST_CONFIG_PATH=~/.kube/test-cluster-config.yaml
K8S_TEST_CONTEXT=test-onf-fabric
K8S_TEST_NAMESPACE=default
K8S_TEST_API_SERVER=https://test-k8s-api.example.com:6443

# ONF Fabric Configuration
ONF_FABRIC_NAME=test-fabric-001
ONF_FABRIC_NAMESPACE=fabric-system
ONF_CRD_VERSION=v1beta1

# ====================
# GitOps Repository (FGD)
# ====================
# Real FGD (Fabric Git Directory) for testing
GITOPS_REPO_URL=https://github.com/your-org/test-fgd-repo.git
GITOPS_REPO_BRANCH=main
GITOPS_REPO_PATH=./test-fgd-local
GITOPS_AUTH_TOKEN=your_git_token_here
GITOPS_SSH_KEY_PATH=~/.ssh/id_rsa_gitops

# GitOps Sync Configuration
GITOPS_SYNC_INTERVAL=60
GITOPS_CONFLICT_RESOLUTION=manual
GITOPS_AUTO_PUSH=true

# ====================
# Test Infrastructure
# ====================
# Real test environment addresses
TEST_NETBOX_URL=https://test-netbox.example.com
TEST_NETBOX_TOKEN=your_test_netbox_token_here

# Container/Docker Configuration
DOCKER_COMPOSE_DIR=gitignore/netbox-docker
CONTAINER_REGISTRY=registry.example.com
CONTAINER_TAG=test-latest

# ====================
# Authentication & Security
# ====================
# Service Account for K8s access
K8S_SERVICE_ACCOUNT=hedgehog-test-sa
K8S_SERVICE_ACCOUNT_TOKEN=your_k8s_token_here

# NetBox API Authentication
NETBOX_API_VERSION=2.9
NETBOX_VERIFY_SSL=false

# Git Authentication  
GIT_USER_NAME=test-automation
GIT_USER_EMAIL=test@example.com

# ====================
# Testing Configuration
# ====================
# Real infrastructure testing preferences
PREFER_REAL_INFRASTRUCTURE=true
MOCK_FALLBACK_ENABLED=false
TEST_TIMEOUT_SECONDS=300

# Test Data Configuration
TEST_FABRIC_PREFIX=test-fabric
TEST_VPC_PREFIX=test-vpc
TEST_CLEANUP_ENABLED=true

# Performance Testing
LOAD_TEST_ENABLED=false
LOAD_TEST_DURATION=600
LOAD_TEST_CONCURRENT_USERS=10

# ====================
# Logging & Monitoring
# ====================
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_OUTPUT=console

# Metrics Collection
METRICS_ENABLED=true
METRICS_ENDPOINT=http://localhost:9090
METRICS_INTERVAL=30

# ====================
# Development Workflow
# ====================
# Enhanced Hive Orchestration settings
ENHANCED_HIVE_ENABLED=true
VALIDATION_CASCADE_ENABLED=true
FRAUD_DETECTION_ENABLED=true

# Git Workflow Settings
AUTO_COMMIT_ENABLED=true
AUTO_PUSH_ENABLED=false
BRANCH_PROTECTION_ENABLED=true

# Deployment Settings
AUTO_DEPLOY_ENABLED=true
DEPLOY_VALIDATION_REQUIRED=true
ROLLBACK_ON_FAILURE=true

# ====================
# Performance Targets
# ====================
SETUP_TARGET_TIME=300
TEST_TIMEOUT=600
SYNC_TIMEOUT=120
DEPLOY_TIMEOUT=180

# ====================
# Feature Flags
# ====================
FEATURE_BIDIRECTIONAL_SYNC=true
FEATURE_K8S_DISCOVERY=true
FEATURE_GITOPS_AUTOMATION=true
FEATURE_REAL_TIME_MONITORING=true